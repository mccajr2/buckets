<% provide(:title, 'New Bucket') %>
<h1>Add a New Bucket</h1>
<%= form_for(bucket) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Create new bucket..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>